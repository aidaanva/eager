{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/eager/master/assets/schema_input.json",
    "title": "nf-core/eager pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample_id": {
                "type": "string",
                "pattern": "^\\S+$",
                "meta": ["sample_id"],
                "errorMessage": "Sample name must be provided and cannot contain spaces"
            },
            "library_id": {
                "type": "string",
                "pattern": "^\\S+$",
                "meta": ["library_id"],
                "errorMessage": "library_id name must be provided and cannot contain spaces"
            },
            "lane": {
                "type": "integer",
                "unique": ["library_id"],
                "meta": ["lane"],
                "errorMessage": "Unrecognised lane type. If no lane information, specify 0"
            },
            "colour_chemistry": {
                "type": "integer",
                "enum": [2, 4],
                "meta": ["colour_chemistry"],
                "errorMessage": "Specified colour chemistry not recognised (e.g. 2 for Illumina NextSeq/NovaSeq or 4 Illumina MiSeq/HiSeq/BGI)"
            },
            "pairment": {
                "type": "string",
                "enum": ["single", "paired"],
                "meta": ["pairment"],
                "errorMessage": "Specified pairment not recognised. BAM containing merged reads files should be specified as single!"
            },
            "strandedness": {
                "type": "string",
                "unique": ["sample_id"],
                "enum": ["single", "double"],
                "meta": ["strandedness"],
                "errorMessage": "Specified strandedness not recognised"
            },
            "damage_treatment": {
                "type": "string",
                "enum": ["none", "half", "full"],
                "meta": ["damage_treatment"],
                "errorMessage": "Specified damage treatment not recognised"
            },
            "r1": {
                "type": "string",
                "pattern": "^\\S+\\.f(ast)?q\\.gz$",
                "exists": true,
                "errorMessage": "FastQ file for reads 1 must be provided, cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'"
            },
            "r2": {
                "errorMessage": "FastQ file for reads 2 cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'",
                "anyOf": [
                    {
                        "type": "string",
                        "pattern": "^\\S+\\.f(ast)?q\\.gz$"
                    },
                    {
                        "type": "string",
                        "maxLength": 0
                    }
                ]
            },
            "bam": {
                "type": "string",
                "pattern": "^\\S+\\.bam$",
                "exists": true,
                "unique": true,
                "dependentRequired": ["bam_reference_id"],
                "errorMessage": "File supplied to bam column has unrecognised extension. Options: .bam!"
            },
            "bam_reference_id": {
                "type": "string",
                "meta": ["bam_reference_id"],
                "errorMessage": "A BAM reference id (corresponding to what is supplied to `--fasta`) must always be provided when providing a BAM file."
            }
        },
        "required": [
            "sample_id",
            "library_id",
            "lane",
            "colour_chemistry",
            "pairment",
            "strandedness",
            "damage_treatment"
        ]
    }
}
